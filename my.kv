            text_color: 0.1, 0.4, 0, 1

        MDLabel:
            id: c1
            text: "Percentage of Negative tweets : "
            pos_hint: {"x": 0.2, "top": 0.6}
            size_hint: 0.50, 0.15
            theme_text_color: "Custom"
            text_color: 0.6, 0, 0, 1

        MDIconButton:
            icon: "emoticon-sad"
            pos_hint: {"x": 0.1, "top": 0.57}
            theme_text_color: "Custom"
            text_color: 0.6, 0, 0, 1



        MDLabel:
            id: d1
            text: "Percentage of Neutral tweets : "
